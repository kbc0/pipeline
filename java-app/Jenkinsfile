pipeline {
    agent any

    /* Jenkins → Global Tool Configuration’da
       Maven = “Maven3”,  JDK = “Java” olarak tanımlı */
    tools {
        maven 'Maven3'
        jdk   'Java'
    }

    environment {
        JENKINS_URL = "${BUILD_URL}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm                    // repo'dan kodu al
                echo "Building from ${JENKINS_URL}"
            }
        }

        /* withMaven → Maven Home’u PATH’e ekler;
           mvn not found hatasını kesin çözer */
        stage('Build + Test + Sonar') {
            steps {
                withMaven(maven: 'Maven3') {
                    sh 'mvn clean test'        // derle + test

                    sh """
                       mvn sonar:sonar \
                         -Dsonar.projectKey=java-app \
                         -Dsonar.projectName='Java App' \
                         -Dsonar.links.ci=${JENKINS_URL}
                    """
                }
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                    publishHTML(
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/site/jacoco',
                        reportFiles: 'index.html',
                        reportName: 'JaCoCo Coverage Report'
                    )
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 1, unit: 'MINUTES') {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted: quality gate = ${qg.status}"
                        }
                    }
                }
            }
        }
    }

    post { always { cleanWs() } }
}
