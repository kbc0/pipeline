pipeline {
    agent any

    tools {
        maven 'Maven3'      // Global Tool Configuration’daki adlar
        jdk   'Java'
    }

    environment {
        JENKINS_URL = "${BUILD_URL}"
    }

    stages {

        stage('Build + Test + Sonar') {
            steps {
                dir('java-app') {               // pom.xml burada
                    withMaven(maven: 'Maven3') {

                        // Derle + test
                        sh 'mvn clean test'

                        // SonarQube analizi – URL ve token’ı env olarak enjekte eder
                        withSonarQubeEnv('SonarQubeServer') {
                            sh """
                               mvn sonar:sonar \
                                 -Dsonar.projectKey=java-app \
                                 -Dsonar.projectName='Java App' \
                                 -Dsonar.links.ci=${JENKINS_URL}
                            """
                        }
                    }
                }
            }
            post {
                always {
                    junit 'java-app/target/surefire-reports/*.xml'

                    /* HTML Publisher eklentisini kurduktan sonra çalışır */
                    publishHTML(
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'java-app/target/site/jacoco',
                        reportFiles: 'index.html',
                        reportName: 'JaCoCo Coverage Report'
                    )
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Quality gate failed: ${qg.status}"
                        }
                    }
                }
            }
        }
    }

    post {
        always { cleanWs() }
    }
}
